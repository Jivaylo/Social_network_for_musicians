@model IEnumerable<PlaylistViewModel>

@{
    ViewData["Title"] = "Your Playlists";
}

<h2 class="text-white mb-4">🎵 Your Playlists</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Create New Playlist</a>

@if (!Model.Any())
{
    <p class="text-warning">No playlists yet. Go create your first one!</p>
}
else
{
    <ul class="list-group">
        @foreach (var playlist in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-white">
                <span>@playlist.Name</span>
                <div class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@playlist.Id" class="btn btn-sm btn-outline-info">👀 View</a>

                    <form asp-action="Delete" asp-route-id="@playlist.Id" method="post" class="d-inline"
                          onsubmit="return confirm('⚠️ Are you sure you want to delete this playlist?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">🗑 Delete</button>
                    </form>
                </div>
            </li>
        }
    </ul>
}

