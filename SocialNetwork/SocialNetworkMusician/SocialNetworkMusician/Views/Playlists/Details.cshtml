@model PlaylistViewModel

@{
    ViewData["Title"] = "Playlist Details";
}

<h2 class="text-white mb-4">🎧 @Model.Name</h2>

@if (!Model.Tracks.Any())
{
    <p>This playlist is empty. Go add some tracks! 🎶</p>
}
else
{
    <ul class="list-group">
        @foreach (var track in Model.Tracks)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center bg-dark text-white">
                <span>@track.Title</span>
                <form asp-action="RemoveTrack" method="post" class="d-inline">
                    <input type="hidden" name="playlistId" value="@Model.Id" />
                    <input type="hidden" name="trackId" value="@track.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
            </li>
        }
    </ul>
}
<a asp-action="Index" class="btn btn-secondary mt-4">⬅ Back to Playlists</a>
