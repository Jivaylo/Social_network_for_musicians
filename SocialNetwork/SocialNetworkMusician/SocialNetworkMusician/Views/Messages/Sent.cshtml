@model IEnumerable<MessageViewModel>

<h2 class="text-white mb-4">📤 Sent Messages</h2>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>To</th>
            <th>Message</th>
            <th>Sent At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.RecipientName</td>
                <td>@(message.Content.Length > 50 ? message.Content[..50] + "..." : message.Content)</td>
                <td>@message.SentAt.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@message.Id" class="btn btn-sm btn-outline-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

