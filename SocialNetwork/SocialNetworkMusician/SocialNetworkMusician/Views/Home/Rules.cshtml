@{
    ViewData["Title"] = "Community Rules";
    var returnTo = Context.Request.Query["returnTo"].ToString();
}

<div class="container mt-4 text-light">
    <h2 class="mb-4">📜 Community Rules</h2>

    <div class="bg-dark p-4 rounded shadow-sm border border-secondary">
        <ul class="list-unstyled fs-5">
            <li class="mb-3">🚫 <strong>No racism, hate speech, or discrimination.</strong></li>
            <li class="mb-3">🤐 <strong>No swearing or vulgar language</strong> in comments, messages, or track titles.</li>
            <li class="mb-3">🛑 <strong>No harassment, threats, or bullying</strong> of any kind.</li>
            <li class="mb-3">🎵 <strong>No uploading of inappropriate or offensive music/videos.</strong></li>
            <li class="mb-3">🔞 <strong>No sexually explicit or violent content.</strong></li>
            <li class="mb-3">📢 <strong>Respect others' creative work.</strong> No spam or excessive self-promotion.</li>
            <li class="mb-3">📬 If you see something wrong, <strong>report it using the 🚨 "Report" button</strong>. Admins will review every case.</li>
        </ul>
    </div>

    @if (!string.IsNullOrEmpty(returnTo))
    {
        var parts = returnTo.Split('/');
        if (parts.Length == 2)
        {
            <a asp-controller="@parts[0]" asp-action="@parts[1]" class="btn btn-sm btn-outline-info mt-4">
                ⬅️ Return to Track Creation
            </a>
        }
    }

    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-light mt-4">
        🏠 Back to Home
    </a>
</div>
