@model IEnumerable<SocialNetworkMusician.Models.UserProfileViewModel>

<h2 class="text-white">All Users</h2>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Display Name</th>
            <th>Email</th>
            <th>Tracks</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.DisplayName</td>
                <td>@user.Email</td>
                <td>@user.TrackCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">View Profile</a>
                </td>
            </tr>
        }
    </tbody>
</table>