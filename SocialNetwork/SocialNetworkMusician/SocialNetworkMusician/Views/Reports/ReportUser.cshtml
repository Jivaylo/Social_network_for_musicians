@model ReportViewModel
<h2 class="text-white">🚨 Report User</h2>

<form asp-action="ReportUser" method="post">
    <input type="hidden" asp-for="ReportedUserId" />
    <div class="form-group">
        <label asp-for="Reason" class="text-white">What's the issue with this user?</label>
        <textarea asp-for="Reason" class="form-control"></textarea>
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger mt-3">Submit Report</button>
</form>

