@model TrackViewModel

<div class="container d-flex justify-content-center">
    <div class="card bg-dark text-white shadow-lg p-4" style="width: 100%; max-width: 700px; border-radius: 15px;">

        <h2 class="text-center mb-4">🎵 @Model.Title</h2>


        <audio controls class="w-100 mb-4" style="border-radius: 10px;">
            <source src="@Model.FileUrl" type="audio/mpeg" />
            Your browser does not support the audio element.
        </audio>

        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
        <p><strong>Uploaded by:</strong> @Model.UserName</p>
        <p><strong>Uploaded at:</strong> @Model.UploadedAt.ToShortDateString()</p>

        <!-- Like & Delete -->
        <div class="d-flex align-items-center gap-3 mt-3">

            <form method="post" asp-action="Like" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-outline-success btn-sm">
                    👍 Like (@Model.LikeCount)
                </button>
            </form>

            <form method="post" asp-action="Dislike" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-outline-danger btn-sm">
                    👎 Dislike
                </button>
            </form>
        

            @if (User.Identity?.IsAuthenticated == true &&
            (User.Identity.Name == Model.UserName || User.IsInRole("Admin")))
            {
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this track?');">
                    <button type="submit" class="btn btn-danger">🗑 Delete</button>
                </form>
            }
        </div>
        <a asp-action="Index" class="btn btn-outline-light mb-3 float-end">
            ⬅ Back
        </a>

        <!-- Comments -->
        <hr class="bg-light mt-5 mb-4" />

        <h4 class="mt-5">💬 Comments</h4>

        @if (Model.Comments.Any())
        {
            <div class="list-group mt-3">
                @foreach (var comment in Model.Comments)
                {
                    <div class="list-group-item bg-dark text-light border-secondary mb-2 rounded shadow-sm">
                        <strong class="text-warning">@comment.UserName</strong>
                        <p class="mb-1">@comment.Content</p>
                        <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">No comments yet. Be the first one to say something 🎤</p>
        }

        @if (User.Identity?.IsAuthenticated == true)
        {
            <form asp-action="AddComment" asp-route-id="@Model.Id" method="post" class="mt-4">
                <div class="form-group mb-2">
                    <textarea name="NewComment" class="form-control" rows="3" placeholder="Write a comment..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
        }
        else
        {
            <p class="text-muted mt-3">You must be logged in to comment.</p>
        }
    </div>
</div>
