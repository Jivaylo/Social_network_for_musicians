@using SocialNetworkMusician.Data.Data
@model TrackViewModel

<div class="container d-flex justify-content-center">
    <div class="card bg-dark text-white shadow-lg p-4" style="width: 100%; max-width: 700px; border-radius: 15px;">

        <h2 class="text-center mb-4">🎵 @Model.Title</h2>

        <audio controls class="w-100 mb-4" style="border-radius: 10px;" onplay="trackPlayed('@Model.Id')">
            <source src="@Model.FileUrl" type="audio/mpeg" />
            Your browser does not support the audio element.
        </audio>

        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
        <p><strong>Uploaded by:</strong> @Model.UserName</p>
        <p><strong>Uploaded at:</strong> @Model.UploadedAt.ToShortDateString()</p>
        <p><strong>Play Count:</strong> 🔁 @Model.PlayCount</p>

  
        <div class="d-flex align-items-center gap-3 mt-3">
            <form method="post" asp-action="Like" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-sm @(Model.IsLikedByCurrentUser ? "btn-success" : "btn-outline-success")">
                    👍 Like (@Model.LikeCount)
                </button>
            </form>

            <form method="post" asp-action="Dislike" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-sm @(Model.IsDislikedByCurrentUser ? "btn-danger" : "btn-outline-danger")">
                    👎 Dislike (@Model.DislikeCount)
                </button>
            </form>

            <form asp-controller="Reports" asp-action="Create" method="get">
                <input type="hidden" name="trackId" value="@Model.Id" />
                <button class="btn btn-sm btn-outline-warning">🚨 Report</button>
            </form>

            @if (User.Identity?.IsAuthenticated == true &&
            (User.Identity.Name == Model.UserName || User.IsInRole("Admin")))
            {
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this track?');">
                    <button type="submit" class="btn btn-danger btn-sm">🗑 Delete</button>
                </form>
            }
        </div>

   
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Playlists" asp-action="AddTrack" method="post" class="mt-4">
                <input type="hidden" name="trackId" value="@Model.Id" />
                <div class="input-group">
                    <select name="playlistId" class="form-select">
                        <option disabled selected>🎵 Add to Playlist</option>
                        @foreach (var playlist in ViewBag.UserPlaylists as List<Playlist>)
                        {
                            <option value="@playlist.Id">@playlist.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-outline-light">➕ Add</button>
                </div>
            </form>
        }

        <hr class="bg-light mt-5 mb-4" />

  
        <h4 class="mt-4">💬 Comments (@Model.Comments.Count)</h4>
        @if (Model.Comments.Any())
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="card bg-secondary p-3 mb-2">
                    <strong class="text-warning">@comment.UserName</strong>
                    <p class="mb-1">@comment.Content</p>
                    <small class="text-light">@comment.CreatedAt.ToString("g")</small>
                </div>
            }
        }
        else
        {
            <p class="text-muted">No comments yet. Be the first one to say something 🎤</p>
        }

        @if (User.Identity?.IsAuthenticated == true)
        {
            <form asp-action="AddComment" asp-route-id="@Model.Id" method="post" class="mt-4">
                <div class="form-group mb-2">
                    <textarea name="NewComment" class="form-control" rows="3" placeholder="Write a comment..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
        }
        else
        {
            <p class="text-muted mt-3">You must be logged in to comment.</p>
        }

        <div class="text-end mt-5">
            <a asp-action="Index" class="btn btn-outline-light">⬅ Back to Tracks</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function trackPlayed(trackId) {
            fetch('/Tracks/IncrementPlayCount/' + trackId, {
                method: 'POST'
            });
        }
    </script>
}
