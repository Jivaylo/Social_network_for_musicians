@model TrackViewModel

<div class="container mt-5 mb-5 px-4" style="max-width: 800px;">
    <h2 class="text-white mb-4 text-center">Submit New Track</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>


        <div class="form-group mb-4">
            <label asp-for="MusicFile" class="form-label text-white">🎵 Choose a Music File</label>
            <div class="input-group">
                <label class="input-group-text bg-success text-white fw-bold" for="MusicFile" style="cursor: pointer;">
                    <i class="bi bi-upload"></i> Upload
                </label>
                <input asp-for="MusicFile" type="file" accept=".mp3,.wav" class="form-control bg-dark text-white" id="MusicFile" onchange="showMusicFileName(this)" />
            </div>
            <small id="music-file-name" class="form-text text-info mt-2"></small>
           
        </div>


        <div class="form-group mb-3">
            <label asp-for="FileUrl">🎧 Paste Music Link (YouTube or direct MP3/WAV)</label>
            <input asp-for="FileUrl" class="form-control" placeholder="https://www.youtube.com/watch?v=..." />
            <span asp-validation-for="FileUrl" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label for="TrackImage" class="form-label text-white d-block">🎨 Upload Track Image</label>

            <label class="custom-file-upload btn btn-outline-light">
                <input type="file" id="TrackImage" name="TrackImage" accept="image/*" onchange="showImageFileName(this)" />
                📁 Choose Image
            </label>

            <small id="image-file-name" class="text-info mt-2 d-block"></small>
        </div>


        <div class="form-group mb-4">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option value="">-- Select Category --</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function showMusicFileName(input) {
            const label = document.getElementById('music-file-name');
            if (input.files && input.files.length > 0) {
                label.textContent = `🎵 ${input.files[0].name}`;
            } else {
                label.textContent = '';
            }
        }

        function showImageFileName(input) {
            const label = document.getElementById('image-file-name');
            if (input.files && input.files.length > 0) {
                label.textContent = `🖼️ ${input.files[0].name}`;
            } else {
                label.textContent = '';
            }
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
