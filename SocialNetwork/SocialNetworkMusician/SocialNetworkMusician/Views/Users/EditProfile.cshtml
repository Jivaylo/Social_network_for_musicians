@model EditProfileViewModel

<h2 class="text-white">Edit Your Profile</h2>

<form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="text-light">

    <div class="mb-3">
        <label asp-for="DisplayName" class="form-label">Display Name</label>
        <input asp-for="DisplayName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Bio" class="form-label">Bio</label>
        <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
    </div>

   

    <button type="submit" class="btn btn-primary">💾 Save Changes</button>
</form>