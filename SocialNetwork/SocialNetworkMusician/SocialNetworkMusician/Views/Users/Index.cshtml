@model IEnumerable<UserProfileViewModel>

<h2 class="text-white mb-4">👥 All Users</h2>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Display Name</th>
            <th>Email</th>
            <th>Joined</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="text-warning text-decoration-none">
                        @user.DisplayName
                    </a>
                </td>
                <td>@user.Email</td>
                <td>@(user.JoinedDate?.ToShortDateString() ?? "N/A")</td>
            </tr>
        }
    </tbody>
</table>
