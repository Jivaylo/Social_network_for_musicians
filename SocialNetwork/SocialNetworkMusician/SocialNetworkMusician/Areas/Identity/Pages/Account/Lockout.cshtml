@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<div class="text-center text-danger">
    <h1 class="display-4">🚫 You’ve Been Banned</h1>
    <p class="lead">Your account has been locked by the admin and you can no longer log in.</p>
    <p>If you believe this is a mistake, please contact support or the site administrator.</p>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm mt-3 px-4">
        ⬅ Back to Home
    </a>
</div>
