@using Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal
@using SocialNetworkForMusician.Data.Models.Entities
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Music Social Network</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/images/music-background.jpg') no-repeat center center fixed;
            background-size: cover;
        }
        .login-container {
            max-width: 400px;
            margin: 100px auto;
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            color: white;
        }
        .btn-custom {
            background-color: #ff4081;
            border: none;
        }
        .btn-custom:hover {
            background-color: #e91e63;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="text-center mb-4">Music Social Network</h2>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <div asp-validation-for="Email" class="text-danger"></div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>
            <button class="btn btn-custom w-100" type="submit">Log In</button>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Register" asp-controller="Account" class="text-light">Don't have an account? Register</a>
        </div>
    </div>
</body>
</html>
