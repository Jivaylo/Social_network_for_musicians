@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Music Social Network</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container text-center mt-5">
        <h1 class="display-3 fw-bold text-primary">Welcome to Music Social Network</h1>
        <p class="lead text-secondary">Connect with musicians, discover new tracks, and rate your favorite songs!</p>
        <div class="mt-4">
            <a href="/Songs" class="btn btn-lg btn-primary me-2">Discover Music</a>
            <a href="/Artists" class="btn btn-lg btn-outline-primary">Explore Artists</a>
        </div>
        <div class="mt-5">
            <img src="https://source.unsplash.com/1200x500/?music,concert" class="img-fluid rounded shadow" alt="Music Concert">
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
