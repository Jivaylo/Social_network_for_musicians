@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Music Social Network</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1e1e1e, #3a3a3a);
            color: white;
            font-family: 'Arial', sans-serif;
        }
        .hero {
            padding: 100px 20px;
            text-align: center;
        }
        .btn-primary {
            background-color: #ff4081;
            border: none;
        }
        .btn-primary:hover {
            background-color: #e91e63;
        }
        .btn-outline-primary {
            border-color: #ff4081;
            color: #ff4081;
        }
        .btn-outline-primary:hover {
            background-color: #ff4081;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container text-center hero">
        <h1 class="display-3 fw-bold">Welcome to Music Social Network</h1>
        <p class="lead">Connect with musicians, discover new tracks, and rate your favorite songs!</p>
        <div class="mt-4">
            <a href="/Songs" class="btn btn-lg btn-primary me-2">Discover Music</a>
            <a href="/Artists" class="btn btn-lg btn-outline-primary">Explore Artists</a>
        </div>
    </div>
</body>
</html>